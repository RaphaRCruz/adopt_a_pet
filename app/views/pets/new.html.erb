<h1>New Pet</h1>

<%= simple_form_for(@pet) do |f| %>
  <%= f.input :name, placeholder: "Minimun 2 letters" %>
  <%= f.input :category, placeholder: "Dog, Cat or Other" %>
  <%= f.input :birth %>
  <%= f.input :photo, as: :file %>
  <%= f.submit class: "btn btn-outline-secondary btn-sm" %>
<% end %>
