<div class="container">
  <div class="d-flex justify-content-center">
    <h1 class="mt-4 border-bottom"><strong> Pets Availables </strong></h1>
  </div>
  <div class="d-flex align-content-start flex-wrap">
    <% @pets.each do |pet| %>
      <div class="col-4 mb-3">
        <div class="card" style="width: 18rem;">
          <%= cl_image_tag pet.photo.key %>
          <div class="card-body">
            <h5 class="card-title border-bottom"><%= pet.name %></h5>
            <p class="card-text">Category: <%= pet.category %></p>
            <p class="card-text">Birth: <%= pet.birth %></p>
            <p><%= link_to "Pet's details", pet_path(pet), class: "btn btn-primary" %></p>
            <%= button_to "Remove", pet_path(pet), class: "btn btn-outline-danger btn-sm", method: :delete, form: {data: {turbo_confirm: 'Are you sure?'}} %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
